@using Microsoft.AspNetCore.Http
@{ 
    string nombre = (string)ViewContext.HttpContext.Session.GetString("username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<header>
    <link rel="stylesheet" href="~/css/sidebars1.css">
    <!-- Dashboard -->
    <div class="d-flex flex-column flex-lg-row h-lg-full bg-surface-secondary">
        <!-- Vertical Navbar -->
        <nav class="navbar show navbar-vertical h-lg-screen navbar-expand-lg px-0 py-3 navbar-light bg-white border-bottom border-bottom-lg-0 border-end-lg" id="navbarVertical">
            <div class="container-fluid">
                <!-- Toggler -->
                <button class="navbar-toggler ms-n2" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarCollapse" aria-controls="sidebarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> <!-- Brand -->
                <div>
                    <div class="avatar-parent-child">
                        <img alt="Image Placeholder" src="https://images.unsplash.com/photo-1548142813-c348350df52b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=3&w=256&h=256&q=80" class="avatar avatar- rounded-circle">
                        <span class="avatar-child avatar-badge bg-success" />
                    </div>
                    <p align="center">@nombre</p>
                </div>

                <!-- User menu (mobile) -->
                <div class="navbar-user d-lg-none">
                    <!-- Dropdown -->
                    <div class="dropdown">

                        <!-- Menu -->
                       
                    </div>
                </div>
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidebarCollapse">
                    <!-- Navigation -->
                    <ul class="navbar-nav">
                        <li class="nav-item"> <a href="@Url.Action("pantallageneral","Auto")" class="nav-link">Autos</a> </li>
                        <li class="nav-item"> <a href="@Url.Action("grupocoche","Grupo")" class="nav-link">Grupos</a> </li>
                        <li class="nav-item"> <a href="@Url.Action("Index","Alarma")" class="nav-link">Alarma</a> </li>
                    </ul> <!-- Divider -->
                    <hr class="navbar-divider my-5 opacity-20"> <!-- Navigation -->
                    <!-- Push content down -->
                    <div class="mt-auto"></div> <!-- User (md) -->
                    <ul class="navbar-nav">
                     <!--<li class="nav-item"><a class="nav-link" href="#"> <i class="bi bi-person-square"></i> Account </a> </li>-->
                        @*<li class="nav-item">@Html.ActionLink("Cerrar sesion","login2","Home",null, new {@class="nav-link"}) </li>*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Acceso" asp-action="Salir">Salir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav> <!-- Main content -->
        <div class="h-screen flex-grow-1 overflow-y-lg-auto">
            <!-- Header -->
            <header class="bg-surface-primary border-bottom pt-6">
                <div class="container-fluid">
                    <div class="mb-npx">
                        <div class="row align-items-center">
                            <div class="col-sm-6 col-12 mb-4 mb-sm-0">
                                <!-- Title -->
                                <h1 class="h2 mb-0 ls-tight">CARMAPS</h1>
                            </div> <!-- Actions -->
                        </div> <!-- Nav -->
                        <ul class="nav nav-tabs mt-4 overflow-x border-0">
                            <li class="nav-item "> @Html.ActionLink("Coches","pantallageneral","Auto",null, new {@class="nav-link active"})</li>
                            <li class="nav-item"> @Html.ActionLink("Nuevo Coche","nuevocoche","Auto",null, new {@class="nav-link active"})</li>
                            <li class="nav-item"> @Html.ActionLink("Borrar Coche","borrarcoche","Auto",null, new {@class="nav-link active"})</li>
                        </ul>
                    </div>
                </div>
            </header>
            @RenderBody()
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - CapaVista - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</html>
